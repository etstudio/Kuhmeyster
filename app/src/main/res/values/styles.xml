<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="searchViewStyle">@style/AppSearchViewStyle</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
    </style>

    <style name="AppSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="searchIcon">@android:drawable/ic_menu_search</item>
        <item name="android:imeActionId">1</item>
    </style>

</resources>
